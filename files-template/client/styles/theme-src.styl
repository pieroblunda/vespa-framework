.inverted
  background-color $blue-500
  color white
  h1, h2, h3, p
    color white
.container
  width 100%
  max-width 960px
  margin 0 auto
  &.container-wide
    max-width initial

.d-grid
  display grid
  // grid-template-rows: repeat(auto-fit, 6fr);
  grid-template-columns: repeat(6, 1fr);
  grid-auto-flow: row dense;
  max-width: 900px;
  margin: 0 auto;
  .grid-item
    aspect-ratio: 1/1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  svg
    margin 8px
    width 35px
    height 32px

.gap
  gap 16px

.d-flex
  display flex
  flex-wrap wrap
  height 100%
@media screen and (max-width: 767px)
  .order-1
    order 1
  .order-2
    order 2
  .order-3
    order 3
.row
  width 100%
  @media screen and (min-width: 768px)
    &.gutted
      .col
        margin-left $size-2x
        margin-right $size-2x
        &:first-child
          margin-left 0
        &:last-child
          margin-right 0
.col
  flex 1 0 100%
  @media screen and (min-width: 768px)
    flex 0 1 auto
.centered
  justify-content center
.vertical-align
  align-items center
.wrap
  flex-wrap wrap
.no-wrap
  flex-wrap nowrap
  overflow-x overlay
.space-around
  justify-content space-around
.space-between
  justify-content space-between
.divider-svg
  svg
    width: 100%;
    height: 40px;
.v-align
  align-items center
.text-right
  text-align right
.text-center
  text-align center
.text-hint
  font-size 70%
  font-style italic
  margin 2px 0
.text-left
  text-align left
.text-large
  font-size 24px
  line-height 30px
.img-fluid
  width 100%
.no-margin
  margin 0
.no-padding
  padding 0
.w-100
  width 100%
.aspect-3-2
  aspect-ratio 3/2
.v-flip
  transform scaleY(-1)
.h-flip
  transform scaleX(-1)
.vh-flip
  transform scale(-1, -1)
.margin-0-auto
  margin 0 auto
.btn-primary
  background-color $green-primary
  border none
  color white
  text-decoration none
  display inline-block
  border-radius $space-05x
  padding $size-2x $size-4x
  font-size $size-3x

.filter-to-white
  filter invert(100%) sepia(0%) saturate(2%) hue-rotate(131deg) brightness(104%) contrast(101%)

.icon-svg
  filter invert(100%) sepia(0%) saturate(0%) hue-rotate(170deg) brightness(94%) contrast(106%)
  margin 8px
  width 32px
  height 32px
  &.color-primary
    filter invert(28%) sepia(85%) saturate(4053%) hue-rotate(238deg) brightness(91%) contrast(96%)

button
a
video
[ng-click]
  cursor pointer


@media screen and (max-width: 767px)
  .desktop-only
    display none
  .carousel-wrapper
    flex-wrap nowrap
    overflow-x overlay
    .col
      min-width 'calc(100% - %s)' % $size-8x !important
@media screen and (min-width: 768px)
  .col
    flex 1 1
  body
    .pricing
      .product-wrapper
        ul
          &.col
            flex 1
          li
            &.icon
              img
                width auto
            &.price
              font-size 150%
              small
                display block
                color #000
                font-weight normal
                font-size 12px
  section
    padding 3rem
